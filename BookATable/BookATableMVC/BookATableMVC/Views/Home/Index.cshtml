
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<style>
    #myCarousel {
        margin: 50px 0 0 0;
    }

    .carousel-inner > .item > img,
    .carousel-inner > .item > a > img {
        margin: auto;
        width: 90%;
        margin-left: auto;
        margin-right: auto;
    }

    .leftcaro {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        width: 15%;
        font-size: 20px;
        color: #fff;
        text-align: center;
        text-shadow: 0 1px 2px rgba(0,0,0,.6);
        background-color: rgba(0,0,0,0);
        filter: alpha(opacity=50);
        opacity: .5;
    }

        .leftcaro .glyphicon-chevron-left {
            left: 50%;
            margin-left: -10px;
            position: absolute;
            top: 50%;
            z-index: 5;
            display: inline-block;
            margin-top: -10px;
        }

    .rightcaro {
        position: absolute;
        top: 0;
        bottom: 0;
        width: 15%;
        font-size: 20px;
        color: #fff;
        text-align: center;
        text-shadow: 0 1px 2px rgba(0,0,0,.6);
        background-color: rgba(0,0,0,0);
        filter: alpha(opacity=50);
        opacity: .5;
        right: 0;
        left: auto;
    }

        .rightcaro .glyphicon-chevron-right {
            right: 50%;
            margin-right: -10px;
            position: absolute;
            top: 50%;
            z-index: 5;
            display: inline-block;
            margin-top: -10px;
        }

    #pic {
        width: 1000px;
        height: 400px;
    }
</style>

<div id="myCarousel" data-interval="2500" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
        <li data-target="#myCarousel" data-slide-to="5"></li>
        <li data-target="#myCarousel" data-slide-to="6"></li>
        <li data-target="#myCarousel" data-slide-to="7"></li>
        <li data-target="#myCarousel" data-slide-to="8"></li>
        <li data-target="#myCarousel" data-slide-to="9"></li>
        <li data-target="#myCarousel" data-slide-to="10"></li>

    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img id="pic" src="~/Pictures/restaurant1.jpg" alt="Chania">
        </div>

        <div class="item">
            <img id="pic" src="~/Pictures/restaurant21.jpg" alt="Chania">
        </div>

        <div class="item">
            <img id="pic" src="~/Pictures/restaurant11.jpg" alt="Flower">
        </div>

        <div class="item">
            <img id="pic" src="~/Pictures/restaurant31.jpg" alt="Flower">
        </div>
        <div class="item">
            <img id="pic" src="~/Pictures/restaurant41.jpg" alt="Chania">
        </div>

        <div class="item">
            <img id="pic" src="~/Pictures/restaurant51.jpg" alt="Chania">
        </div>

        <div class="item">
            <img id="pic" src="~/Pictures/restaurant61.jpg" alt="Flower">
        </div>

        <div class="item">
            <img id="pic" src="~/Pictures/restaurant71.jpg" alt="Flower">
        </div>
        <div class="item">
            <img id="pic" src="~/Pictures/restaurant81.jpg" alt="Chania">
        </div>

        <div class="item">
            <img id="pic" src="~/Pictures/restaurant91.jpg" alt="Flower">
        </div>

        <div class="item">
            <img id="pic" src="~/Pictures/restaurant101.jpg" alt="Flower">
        </div>
    </div>
    <!-- Left and right controls -->
    <a class="left leftcaro" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right rightcaro" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
