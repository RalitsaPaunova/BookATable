@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Book a Table</title>
    @Styles.Render("~/Content/book-a-table-style")
    <style>
        body { padding-top: 50px; }
    </style>
</head>
<body>
    
    <img src="~/Pictures/banner.jpg" width="100%" height="150px" margin-top="-10px" />
    
    <nav class="navbar navbar-default navbar-fixed-top topnav" role="navigation">
        <div class="container topnav">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "navbar-brand" })

                @if (BookATableMVC.Helper.AthenticationService.LoggedUser != null)
                {
                    @Html.ActionLink("Reservations", "Index", "Reservations", null, new { @class = "navbar-brand" })
                    @Html.ActionLink("Restaurants", "Index", "Restaurants", null, new { @class = "navbar-brand" })
    <div class="container topnav">
             <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li> @Html.ActionLink("Settings", "Edit", "User", null, new { @class = "navbar-brand pull-right" })</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Accounts", null, new { @class = "navbar-brand pull-right" })</li>
                </ul>            
        </div>
    </div>
                }
              </div>
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav navbar-right">
                                @if (BookATableMVC.Helper.AthenticationService.LoggedUser == null)
                    {
                                    <li>@Html.ActionLink("Register", "Register", "Accounts", null, new { @class = "navbar-brand pull-right" })</li>
                                    <li> @Html.ActionLink("Login", "Login", "Accounts", null, new { @class = "navbar-brand pull-right" })</li>
                    }
                            </ul>
                        </div>
                    </div>

</nav>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Book A Table</p>
        </footer>
    </div>
    @System.Web.Optimization.Scripts.Render("~/Scripts/book-a-table-script")
</body>
</html>
